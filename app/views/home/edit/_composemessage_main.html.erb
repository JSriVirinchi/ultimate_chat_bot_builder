<div class="usermessage_before" id="triggerphrase_usermessage">
	<div class="Initial-Message-from-Customer">
		<span class="mr-4">Initial Message from Customer</span>
		<%= link_to image_tag('editiconblack.png', size: "14"),triggerphraseedit_path(@bot.id), id: "triggerphrase_edit_icon", remote: true, class: " ml-4"%>
		<%= link_to image_tag('tickicon.png', size: "14"), triggerphraseconfirm_path(@bot.id), id: "triggerphrase_tick_icon", remote: true, class: "hide ml-4"%>
	</div>
	<div class="card_divider mb-2"></div>
	<div class="container" style="height: 55px; width: 300px; overflow: auto;">
		<% for phrase in Triggerphrase.where(bot_id: @bot.id)%>
			<span class="triggerphrase ml-1 mr-1 mt-4 mb-2">
				<span class= "triggerphrase_text ml-2 mr-2"><%= phrase.triggerphrase %></span>
				<span class="hide" id= <%= "triggerphrase_delete" + (phrase.id).to_s%>>
					<%= link_to image_tag('deleteicon.png', size: "10"), triggerphrasedelete_path(phrase.id,@bot.id), method: :delete ,local: true, class: ""%>		
				</span>
			</span>			
		<% end %>
	</div>
	<div class="card_divider mb-2 mt-2 hide" id="triggerphrase_usermessage_second_card_divider"></div>
	<div class="ml-3 hide" id="triggerphrase_add_a_new_phrase">
		<%= form_with scope: :triggerphrase, url: triggerphrasecreate_path(@bot.id), method: :post, local: true do |f| %>
        <span class="mx-auto text-center" style="width: 300px; " >
          <%= f.text_field :triggerphrase, class: "addtriggerphrasefield", placeholder: "Add a new phrase", remote: true%> 
        </span>
        <span class="form-group mx-auto text-center mt-4" style="width: 300px;">
          <%= f.submit value: "Add", class: "btn btn-sm btn-outline-success ml-2", remote: true%>
        </span>
      <% end %>
	</div>
</div>