<%= render 'home/edit/nodes/botmessages_box_before'%>
<div id="botmessages_box_after_partial">
	<%= render 'home/edit/nodes/botmessages_box_after'%>
</div>
	
<%= render 'home/edit/nodes/botmessages_box_compressed'%>

<script type="text/javascript">
	<% @node = Node.where(bot_id: @bot.id, parent_id: 0).first%>
	<% if Node.where(bot_id: @bot.id, parent_id: 0).first%>
		document.getElementById('botresponses_box_before').classList.add('hide');
		document.getElementById('botresponses_box_after').classList.remove('hide');
		<% if @node.set_next_action%>
			document.getElementById('botresponses_box_after').classList.add('hide');
			document.getElementById('botresponses_box_compressed').classList.remove('hide');
		<% end %> 
	<% end %>

</script>